generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  name  String
  email String @unique
  Otp   Otp[]
}

model Otp {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  code      String
  userId    String   @db.ObjectId
  expiresAt DateTime
  used      Boolean  @default(false)

  user User @relation(fields: [userId], references: [id])
}
